@using CadCurriculoMVC.Enums
@model AllInformationViewModel

<div style="font-family: Arial, Helvetica, sans-serif;">
    <h1 style="text-align: center; text-decoration: underline; text-transform: uppercase; margin-top: 40px">@Model.Pessoa.Nome</h1>
</div>
<div class="card-body">
    <div class="form-row">
        <div class="form-group col-md-6" style="text-align:center">
            <h4>Perfil Pessoal</h4>
            <div class="col" style="text-align:match-parent">
                <h6><span>CPF: @Model.Pessoa.CPF</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>Email: @Model.Pessoa.Email</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>Pretensão Salarial: R$ @Model.Pessoa.PretensaoSalarial.ToString("0.00")</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>Cargo Pretendido: @Model.Pessoa.CargoPretendido</span></h6>
            </div>
        </div>

        <div class="form-group col-md-6" style="text-align:center">

            <h4>Formação Acadêmica</h4>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.NomeCurso_1</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Enum.GetName(typeof(Meses), @Model.Formacao.MesFormacao_1.Value) </span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.AnoFormacao_1</span></h6>
            <br />

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.NomeCurso_2</span></h6>
            </div>

            @if(@Model.Formacao.MesFormacao_2 != null)
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Enum.GetName(typeof(Meses),@Model.Formacao.MesFormacao_2.Value)</span></h6>
                </div> 
            }
            

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.AnoFormacao_2 </span></h6>
            </div>
            <br />

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.NomeCurso_3</span></h6>
            </div>

            @if (@Model.Formacao.MesFormacao_3 != null)
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Enum.GetName(typeof(Meses),@Model.Formacao.MesFormacao_3.Value)</span></h6>
                </div>
            }

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.AnoFormacao_3</span></h6>
            </div>
            <br />

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.NomeCurso_4</span></h6>
            </div>

            @if (@Model.Formacao.MesFormacao_4 != null)
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Enum.GetName(typeof(Meses),@Model.Formacao.MesFormacao_4.Value)</span></h6>
                </div>
            }

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.AnoFormacao_4</span></h6>
            </div>
            <br />

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.NomeCurso_5</span></h6>
            </div>

            @if (@Model.Formacao.MesFormacao_5 != null)
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Enum.GetName(typeof(Meses),@Model.Formacao.MesFormacao_5.Value)</span></h6>
                </div>
            }

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Formacao.AnoFormacao_5</span></h6>
            </div>
        </div>
    </div>

        <div class="form-group col-md-6" style="text-align:center">

            <h4>Experiência Profissional</h4>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Experiencia.NomeEmpresa_1</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Experiencia.NomeCargo_1</span></h6>
            </div>

            @if (Model.Experiencia.DtInicio_1.ToString("yyyy-MM-dd") != Model.Experiencia.DtFim_1.ToString("yyyy-MM-dd"))
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Experiencia.DtInicio_1.ToString("yyyy-MM-dd")</span></h6>
                </div>


                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Experiencia.DtFim_1.ToString("yyyy-MM-dd")</span></h6>
                </div>
                <br />
            }

            <br />

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Experiencia.NomeEmpresa_2</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Experiencia.NomeCargo_2</span></h6>
            </div>

            @if (Model.Experiencia.DtInicio_2.ToString("yyyy-MM-dd") != Model.Experiencia.DtFim_2.ToString("yyyy-MM-dd"))
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Experiencia.DtInicio_2.ToString("yyyy-MM-dd")</span></h6>
                </div>


                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Experiencia.DtFim_2.ToString("yyyy-MM-dd")</span></h6>
                </div>
                <br />
            }

            <br />

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Experiencia.NomeEmpresa_3</span></h6>
            </div>

            <div class="col" style="text-align:match-parent">
                <h6><span>@Model.Experiencia.NomeCargo_3</span></h6>
            </div>

            @if (Model.Experiencia.DtInicio_3.ToString("yyyy-MM-dd") != Model.Experiencia.DtFim_3.ToString("yyyy-MM-dd"))
            {
                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Experiencia.DtInicio_3.ToString("yyyy-MM-dd")</span></h6>
                </div>


                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Experiencia.DtFim_3.ToString("yyyy-MM-dd")</span></h6>
                </div>
                <br />
            }
        </div>

        <div class="form-group col-md-6" style="text-align:center">

            <h4>Idiomas</h4>

            @if (Model.Idioma.Idioma_1.Trim() != "")
            {

                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Idioma.Idioma_1</span> - <span> @Enum.GetName(typeof(NiveisIdioma),@Model.Idioma.Nivel_1)</span></h6>
                </div>

            }

            @if (Model.Idioma.Idioma_2.Trim() != "")
            {

                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Idioma.Idioma_2</span> - <span> @Enum.GetName(typeof(NiveisIdioma),@Model.Idioma.Nivel_2)</span></h6>
                </div>

            }

            @if (Model.Idioma.Idioma_3.Trim() != "")
            {

                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Idioma.Idioma_3</span> - <span> @Enum.GetName(typeof(NiveisIdioma),@Model.Idioma.Nivel_3)</span></h6>
                </div>

            }

            @if (Model.Idioma.Idioma_4.Trim() != "")
            {

                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Idioma.Idioma_4</span> - <span> @Enum.GetName(typeof(NiveisIdioma),@Model.Idioma.Nivel_4)</span></h6>
                </div>

            }

            @if (Model.Idioma.Idioma_5.Trim() != "")
            {

                <div class="col" style="text-align:match-parent">
                    <h6><span>@Model.Idioma.Idioma_5</span> - <span> @Enum.GetName(typeof(NiveisIdioma),@Model.Idioma.Nivel_5)</span></h6>
                </div>

            }

        </div>
    </div>
</div>